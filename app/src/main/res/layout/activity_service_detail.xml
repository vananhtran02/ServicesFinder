<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Service Image -->
        <ImageView
            android:id="@+id/serviceDetailImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/whitesmoke"
            android:contentDescription="Service image" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Service Title -->
            <TextView
                android:id="@+id/serviceDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Professional Haircut"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <!-- Service Pricing -->
            <TextView
                android:id="@+id/serviceDetailPricing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$25"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Description Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="8dp" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/serviceDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Professional haircut service..."
                android:textSize="14sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Category -->
            <TextView
                android:id="@+id/serviceDetailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“‚ Hair Care: Cut, Color, Styling"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Service Area -->
            <TextView
                android:id="@+id/serviceDetailArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Service Area: San Jose"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="8dp" />

            <!-- Availability -->
            <TextView
                android:id="@+id/serviceDetailAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Available: Tue, Wed"
                android:textSize="13sp"
                android:textColor="#666666"
                android:layout_marginBottom="24dp" />

            <!-- Provider Section Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Provider Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provider Information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#212121"
                android:layout_marginBottom="12dp" />

            <!-- Provider Name -->
            <TextView
                android:id="@+id/providerDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Provider: John Doe"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#1976D2"
                android:layout_marginBottom="8dp" />

            <!-- Provider Contact -->
            <TextView
                android:id="@+id/providerDetailContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ž (123) 456-7890\nâœ‰ï¸ john@example.com\nðŸ“ 123 Main St, San Jose, CA"
                android:textSize="13sp"
                android:textColor="#666666"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/callButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“ž Call"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/emailButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="âœ‰ï¸ Email"
                    android:backgroundTint="@color/lightseagreen"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp" />

                <Button
                    android:id="@+id/locationButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ðŸ“ Map"
                    android:backgroundTint="@color/peru"
                    android:textColor="@color/white"
                    android:layout_marginStart="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>