<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Service Image -->
        <ImageView
            android:id="@+id/serviceDetailImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="@color/whitesmoke"
            android:contentDescription="Service image" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title and Favorite Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <!-- Service Title -->
                <TextView
                    android:id="@+id/serviceDetailTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/professional_haircut"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/verydarkgray" />

                <!-- Favorite Button -->
                <Button
                    android:id="@+id/favoriteButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:text="â™¡"
                    android:textSize="24sp"
                    android:textColor="@color/peru"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/add_to_favorites"/>
            </LinearLayout>

            <!-- Service Pricing -->
            <TextView
                android:id="@+id/serviceDetailPricing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_25"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="16dp" />

            <!-- Description Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/verydarkgray"
                android:layout_marginBottom="8dp" />

            <!-- Description Text -->
            <TextView
                android:id="@+id/serviceDetailDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/professional_haircut_service"
                android:textSize="14sp"
                android:textColor="@color/mediumgray"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Category -->
            <TextView
                android:id="@+id/serviceDetailCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hair_care_cut_color_styling"
                android:textSize="13sp"
                android:textColor="@color/mediumgray"
                android:layout_marginBottom="8dp" />

            <!-- Service Area -->
            <TextView
                android:id="@+id/serviceDetailArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/service_area_san_jose"
                android:textSize="13sp"
                android:textColor="@color/mediumgray"
                android:layout_marginBottom="8dp" />

            <!-- Availability -->
            <TextView
                android:id="@+id/serviceDetailAvailability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/available_tue_wed"
                android:textSize="13sp"
                android:textColor="@color/mediumgray"
                android:layout_marginBottom="8dp" />
            <!-- Preferred Contact -->
            <TextView
                android:id="@+id/serviceDetailPreferredContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¬ Preferred Contact: Call"
                android:textSize="13sp"
                android:textColor="@color/mediumgray"
                android:layout_marginBottom="24dp"
                android:visibility="gone" />

            <!-- Provider Section Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/sf_surface_variant"
                android:layout_marginBottom="16dp" />

            <!-- Provider Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_information"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/verydarkgray"
                android:layout_marginBottom="12dp" />

            <!-- Provider Name -->
            <TextView
                android:id="@+id/providerDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/provider_john_doe"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/teal_700"
                android:layout_marginBottom="8dp" />

            <!-- Provider Contact -->
            <TextView
                android:id="@+id/providerDetailContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_123_456_7890_n_john_example_com_n_123_main_st_san_jose_ca"
                android:textSize="13sp"
                android:textColor="@color/sf_on_surface"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/callButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/icon_call"
                    android:backgroundTint="@color/design_default_color_primary"
                    android:textColor="@color/white"
                    android:layout_marginEnd="2dp" />

                <Button
                    android:id="@+id/emailButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/icon_email"
                    android:backgroundTint="@color/lightseagreen"
                    android:textColor="@color/white"
                    android:layout_marginStart="2dp"
                    android:layout_marginEnd="2dp" />

                <Button
                    android:id="@+id/locationButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/icon_map"
                    android:backgroundTint="@color/peru"
                    android:textColor="@color/white"
                    android:layout_marginStart="2dp" />
            </LinearLayout>
        </LinearLayout>
        <!-- CUSTOMER EVIEW  -->
        <!-- Add Review Button -->
        <Button
            android:id="@+id/addReviewButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/action_add_review"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:backgroundTint="@color/transparent"
            android:textColor="@color/peru"
            android:drawableStart="@drawable/ic_add_review"
            style="?android:attr/borderlessButtonStyle"/>

        <!-- Average Rating Display -->
        <LinearLayout
            android:id="@+id/ratingSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_reviews"
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/averageRatingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text=""
                android:textSize="18sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/reviewCountText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="(0 reviews)"
                android:textSize="14sp"
                android:textColor="@color/gray"/>
        </LinearLayout>

        <!-- Reviews List (RecyclerView) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reviewsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:nestedScrollingEnabled="false"/>

        <!-- No Reviews Message -->
        <TextView
            android:id="@+id/noReviewsText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/label_no_reviews_yet"
            android:textAlignment="center"
            android:textColor="@color/gray"
            android:visibility="gone"/>

    </LinearLayout>
</ScrollView>